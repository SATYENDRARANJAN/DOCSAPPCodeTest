<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp">
    <ImageView
        android:id="@+id/img_receiver"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:paddingTop="2dp"
        android:layout_marginLeft="4dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_receiver_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingTop="2dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_receiver"/>

    <TextView
        android:id="@+id/tv_receiver_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hihihhihhihiihhi"
        android:background="@drawable/layout_message_bubble"
        android:textColor="#000000"
        android:layout_marginLeft="4dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_receiver_name"
        app:layout_constraintLeft_toRightOf="@id/img_receiver"
        android:maxWidth="200dp"
        />

    <TextView
        android:id="@+id/tv_received_time"
        android:layout_width="0dp"
        android:textSize="6dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_receiver_msg"
        app:layout_constraintLeft_toRightOf="@+id/img_receiver"
        />
</android.support.constraint.ConstraintLayout>